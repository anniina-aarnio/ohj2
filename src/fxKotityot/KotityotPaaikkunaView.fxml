<?xml version="1.0" encoding="UTF-8"?>

<?import fi.jyu.mit.fxgui.ListChooser?>
<?import fi.jyu.mit.fxgui.StringGrid?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxKotityot.KotityotGUIController">
   <left>
      <BorderPane prefHeight="300.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <Label text="Käyttäjät" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <ListChooser rivit="Aada&#10;Benjamin&#10;Cecilia&#10;Daniel" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <HBox BorderPane.alignment="BOTTOM_LEFT">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleMuokkaaKayttajia" text="Muokkaa käyttäjiä">
                     <tooltip>
                        <Tooltip text="Muokkaa käyttäjää tai lisää uusi käyttäjä" />
                     </tooltip>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </bottom>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>
   </left>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <top>
            <Label text="Tehtävät" BorderPane.alignment="CENTER" />
         </top>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#handleMuokkaaTehtavia" text="Muokkaa tehtäviä">
                     <tooltip>
                        <Tooltip text="Avaa ikkuna, jossa voi luoda uusia, muokata ja poistaa tehtäviä" />
                     </tooltip>
                  </Button>
               </buttons>
               <padding>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </padding>
            </ButtonBar>
         </bottom>
         <center>
            <StringGrid rivit="Nimi|Aika&#10;Imurointi|40&#10;Likakaivon tyhjennys|30" BorderPane.alignment="CENTER">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy></StringGrid>
         </center>
      </BorderPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Tiedosto">
            <items>
                  <Menu mnemonicParsing="false" text="Uusi...">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#handleUusiKayttaja" text="Käyttäjä" />
                    <MenuItem mnemonicParsing="false" onAction="#handleUusiTehtava" text="Tehtävä" />
                    </items>
                  </Menu>
                  <MenuItem mnemonicParsing="false" onAction="#handleLopeta" text="Lopeta" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Muokkaa">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleMuokkaaKayttajia" text="Muokkaa käyttäjiä" />
                  <MenuItem mnemonicParsing="false" onAction="#handleMuokkaaTehtavia" text="Muokkaa tehtäviä" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Apua">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAvaaApuja" text="Apua" />
                  <MenuItem mnemonicParsing="false" onAction="#handleAvaaAlkuikkuna" text="Tietoja" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
